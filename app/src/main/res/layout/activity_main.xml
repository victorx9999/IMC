<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Digite seu nome:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDNome"
            android:hint="Nome"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Digite sua idade:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDIdade"
            android:hint="Idade"
            android:textSize="20sp"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Digite seu peso:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDPeso"
            android:hint="Peso"
            android:textSize="20sp"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Digite sua altura:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Selecione seu sexo:"
            android:textAlignment="center"/>

        <Spinner
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:id="@+id/spinner" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Qual seu nivel de atividade diaria:"
            android:layout_marginBottom="20sp"
            android:textAlignment="center"/>
        <CheckBox
            android:id="@+id/cbAvLeve"
            android:text="Atividade leve"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAvModerada"
            android:text="Atividade moderada"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAvElevada"
            android:text="Atividade elevada"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAvIntensa"
            android:text="Atividade intensa"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"/>

    <Button
        android:id="@+id/btContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textAlignment="center" />


</LinearLayout>

</ScrollView>