<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Digite seu nome:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDNome"
            android:hint="Nome"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Digite sua idade:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDIdade"
            android:hint="Idade"
            android:textSize="25sp"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Digite seu peso:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDPeso"
            android:hint="Peso"
            android:textSize="25sp"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Digite sua altura:"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etIDAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Qual seu nivel de atividade diaria:"
            android:layout_marginBottom="20sp"
            android:textAlignment="center"/>
        <CheckBox
            android:id="@+id/cbAvLeve"
            android:text="Atividade leve"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAvModerada"
            android:text="Atividade moderada"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAvElevada"
            android:text="Atividade elevada"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAvIntensa"
            android:text="Atividade intensa"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="314dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btCalcIMC"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:text="IMC"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btCalcCalorias"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="Calorias"
            android:textSize="25sp" />


    </LinearLayout>




</LinearLayout>